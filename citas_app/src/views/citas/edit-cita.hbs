<div class="col-md-4 mx-auto">
    <div class="card text-center">
        <div class="card-header">
            <label for="">Edit Cita</label>
        </div>
        <div class="edit-body">
            <form action="/citas/edit/{{cita._id}}?_method=PUT" method="POST">
                <input type="hidden" value="PUT">
                <div class="form-group">
                    <input type="number" name="id_number" class="form-control" placeholder="Cedula" value="{{cita.id_number}}" readonly required>
                </div>
                <div class="form-group">
                    <input type="text" name="name" class="form-control" placeholder="Nombres" value="{{cita.name}}" required autofocus>
                    <input type="text" name="lastname" class="form-control" placeholder="Apellidos" value="{{cita.lastname}}" required>
                    <br>
                    <label for="">Fecha de Nacimiento</label>
                    <input type="date" size="8" name="birth" class="form-control" placeholder="Fecha de Nacimiento" value="{{cita.birth}}" required>                    
                    <input type="text" name="city" class="form-control" placeholder="Ciudad" value="{{cita.city}}" required>
                    <input type="text" name="neighborhood" class="form-control" placeholder="Barrio" value="{{cita.neighborhood}}" required>
                    <input type="number" min="3000000000" max="3999999999" name="phone" class="form-control" placeholder="Celular" value="{{cita.phone}}" required>
                </div>
                <br>
                <div class="form-group">
                    <button class="btn btn-primary btn-block">
                        Save
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>